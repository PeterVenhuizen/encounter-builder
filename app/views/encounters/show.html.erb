<section id="main">
  <p id="notice"><%= notice %></p>

  <div id="encounter-builder">
    <div>
      <h2><%= @encounter.name %></h2>
      <div class="col">
        
        <div class="summary">
          <label>Difficulty:</label>
          <span class="pill <%= @encounter.summary['difficulty'] %>"><%= @encounter.summary['difficulty'] %></span>
          <label>Total Experience:</label>
          <span><%= @encounter.summary['total_experience'] %></span>
        </div>

        <span class="summary">Difficulty calculated for <%= @encounter.summary['number_of_players'] %> players of level <%= @encounter.summary['average_level'] %> (avg)</span>
      </div>
      <p><%= markdown(@encounter.description).html_safe %></p>
    </div>

    <div class="rectangle">
      <h2>Monsters</h2>
      <% @encounter.monsters.each do |id| %>
        <% monster = Monster.find(id) %>
        <%= render 'encounters/monster/monster_card', monster: monster, deletable: false %>
      <% end %>
    </div>
  </div>

  <div class="encounter-actions mt-1">
    <%= link_to 'Edit', edit_encounter_path(@encounter), class: 'btn easy' %>
    <%= link_to 'Delete'.html_safe, @encounter, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn hard' %>
  </div>
</div>