<h1>Encounters</h1>

<% @encounters.each do |encounter| %>
  <% presenter = EncounterPresenter.new(encounter) %>
  <div class="summary-row">
    <span class="name">
      <%= link_to encounter.name, encounter %>
    </span>

    <span class="encounter-difficulty pill <%= presenter.difficulty %>">
      <%= presenter.difficulty %>
    </span>

    <span class="encounter-monsters">
      &#128126; <%= presenter.number_of_monsters %>
    </span>

    <span class="encounter-created-at">
      <%= presenter.created_at %>
    </span>

    <div class="encounter-actions">
      <%= link_to 'Edit', edit_encounter_path(encounter), class: 'btn easy' %>
      <%= link_to 'Delete', encounter, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn hard' %>
    </div>

  </div>
<% end %>

<br>

<%= link_to 'new', new_encounter_path, class: 'btn trivial' %>