<section id="main">
  <h1>Encounters</h1>
  <p id="notice"><%= notice %></p>

  <% @encounters.each do |encounter| %>
    <div class="encounter-row">
      <span class="encounter-name">
        <%= link_to encounter.name, encounter %>
      </span>

      <span class="encounter-created-at">
        <%= encounter.created_at %>
      </span>

      <div class="encounter-actions">
        <%= link_to 'Edit', edit_encounter_path(encounter), class: 'btn easy' %>
        <%= link_to 'Delete', encounter, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn hard' %>
      </div>
    </div>
  <% end %>

  <%= link_to 'New Encounter', new_encounter_path, class: 'btn trivial' %>

</section>