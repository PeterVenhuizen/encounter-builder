<%= form_with url: encounters_monster_path, remote: true, html: { class: 'inline' } do |form| %>
   <div class="row">
    <%= form.label 'Monsters' %>
    <%= form.select(:id, Monster.all.collect { |m| [m.name, m.id] }, prompt: true) %>
  </div>

  <div class="actions">
    <%= form.submit 'Add', class: 'btn trivial' %>
  </div>
<% end %>