<h1>New Monster</h1>

<%= form_with url: '/search', method: :get, local: false do |form| %>
  <%= form.search_field :search %>
  <%= form.submit 'Search Monster' %>
<% end %>

<div id="flash-messages">
  <%= render 'layouts/flash' %>
</div>

<div id="monster-form">
  <%= render 'form' %>
</div>

<%= link_to 'Back', monsters_path %>
