<%
  emoji_per_difficulty = {
    none: '&#x1f642;',
    trivial: '&#x1f604;',
    easy: '&#x1f642;',
    medium: '&#x1f610;',
    hard: '&#x1f628;',
    deadly: '&#x1f635;'
  }

  emoji = emoji_per_difficulty[@dto.difficulty] 
%>

<% @players.each do |data| %>
  <% data.symbolize_keys! %>

  <% player = PlayerCharacter.new(data) %>
  <div class="player">
    <div class="emoji"><%= emoji.html_safe %></div>
    <span class="name"><%= player.name %></span>

    <div class="stats">
      <div>
        <label>LVL: </label>
        <span class="level"><%= player.level %></span>
      </div>
    </div>
    <%= link_to '&#10060;'.html_safe,"build/player/#{data[:id]}", remote: true, method: :delete %>
  </div>
<% end %>