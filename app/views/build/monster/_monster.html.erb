<% @monsters.each do |id| %>
  <% monster = Monster.find(id) %>
  <div class="player">
    <div class="emoji">&#128126;</div>
    <%# &#128128; %>
    <div class="description">
      <span class="name"><%= monster.name %></span>
      <span class="size-and-type"><%= "#{monster.size} #{monster.species}" %></span>
    </div>
    <div class="stats">
      <div>
        <label>CR: </label>
        <span><%= monster.challenge_rating %></span>
      </div>
      <div>
        <label>XP: </label>
        <span><%= monster.xp %></span>
      </div>
    </div>
    <%= link_to '&#10060;'.html_safe, "build/monster/#{id}", remote: true, method: :delete %>
  </div>
<% end %>