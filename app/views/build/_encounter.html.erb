<div id="xp-threshold">
  XP Thresholds: 
  <% party_xp = @encounter.party.party_xp %>
  <% deadly = party_xp[:deadly] %>
  <% party_xp.each do |k,v| %>
    <span class="pill <%= k.to_s %>"%><%= v %></span>
  <% end %>
</div>

<div class="stats">
  <label>Difficulty</label>
  <span class="pill <%= @dto.difficulty.to_s %>"><%= @dto.difficulty.to_s %></span>
  
  <label>Total XP</label>
  <span><%= @dto.award_xp %></span>

  <label>Adjusted XP</label>
  <span><%= @dto.adjusted_xp.to_i %> XP (x<%= @dto.multiplier %>)</span>
</div>