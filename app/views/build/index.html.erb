<div id="app">

  <div id="encounter">
    <h1>D&D 5e Encounter Builder</h1>
    <%= render partial: 'encounter' %>
  </div>

  <div id="encounter-party">
    <h3>Party</h3>
    <%= render 'build/player/form' %>

    <div id="party">
      <%= render partial: 'build/player/player' %>
    </div>
  </div>

  <div id="encounter-monsters">
    <h3>Monsters</h3>
    <%= render 'build/monster/form' %>
    
    <div id="monsters">
      <%= render partial: 'build/monster/monster' %>
    </div>
  </div>
  
  <%= link_to 'Reset &#10226;'.html_safe, build_reset_path, remote: true %>

</div>