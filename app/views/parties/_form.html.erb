<%= form_with(model: party, local: true) do |form| %>
  <% if party.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(party.errors.count, "error") %> prohibited this party from being saved:</h2>

      <ul>
        <% party.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <h2>Players</h2>
  <div class='field'>
    <%= form.fields_for :players do |player_form| %>
      <%= render 'player_fields', f: player_form %>
    <% end %>
    <div class='links'>
      <%= link_to_add_association 'add player', form, :players %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
